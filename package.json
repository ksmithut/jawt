{
  "name": "jawt",
  "description": "A WebCrypto based JSON Web Token implementation without dependencies",
  "license": "MIT",
  "version": "0.0.8",
  "main": "./src/index.js",
  "exports": "./src/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=15.13.x"
  },
  "repository": {
    "url": "git@github.com:ksmithut/jawt.git"
  },
  "homepage": "https://github.com/ksmithut/jawt",
  "files": [
    "src/**/*.js",
    "dist/**/*.ts"
  ],
  "imports": {
    "#webcrypto": {
      "node": "./src/lib/webcrypto.node.js",
      "default": "./src/lib/webcrypto.browser.js"
    }
  },
  "scripts": {
    "format": "prettier-standard",
    "lint": "prettier-standard --check --lint && tsc --noEmit",
    "build": "tsc --emitDeclarationOnly",
    "prepublish": "tsc --emitDeclarationOnly",
    "test": "tap --reporter=spec",
    "coverage": "tap --coverage-report=html",
    "prepare": "husky install || true"
  },
  "tap": {
    "check-coverage": true,
    "node-arg": [
      "--no-warnings",
      "--experimental-loader",
      "@istanbuljs/esm-loader-hook"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.1.2",
    "@ksmithut/prettier-standard": "^0.1.0",
    "@types/node": "^17.0.26",
    "husky": "^7.0.4",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^12.4.0",
    "standard": "^17.0.0",
    "tap": "^16.0.1",
    "typescript": "^4.6.3"
  }
}
