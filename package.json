{
  "name": "jawt",
  "description": "A WebCrypto based JSON Web Token implementation without dependencies",
  "license": "MIT",
  "version": "0.0.4",
  "main": "src/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=15.13.x"
  },
  "repository": {
    "url": "git@github.com:ksmithut/jawt.git"
  },
  "homepage": "https://github.com/ksmithut/jawt",
  "files": [
    "src/**/*.js",
    "dist/**/*.ts"
  ],
  "imports": {
    "#webcrypto": {
      "node": "./src/lib/webcrypto.node.js",
      "default": "./src/lib/webcrypto.browser.js"
    }
  },
  "scripts": {
    "format": "prettier-standard",
    "lint": "prettier-standard --check --lint && tsc --noEmit",
    "build": "tsc --emitDeclarationOnly",
    "prepublish": "tsc --emitDeclarationOnly",
    "test": "tap --100"
  },
  "dependencies": {},
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@types/node": "^15.12.2",
    "jsonwebtoken": "^8.5.1",
    "prettier-standard": "^16.4.1",
    "standard": "^16.0.3",
    "tap": "^15.0.9",
    "typescript": "^4.3.2"
  }
}
